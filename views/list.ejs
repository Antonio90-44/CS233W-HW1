<%- include("partials/header") %>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
<main class="grid">
  <% if(listItems.length === 0) { %>
    <p>No items found.</p><% } %>

  <% listItems.forEach(item => { %>
    <div class="card <%= item.section %>">
      <h2><%= item.itemName %></h2>
      <p>Category: <%= item.section %></p>
      <% if(item.coupon) { %>
        <p>âœ‚ Clip Coupon</p>
      <% } %>
      <a href="/lists/item/<%= item.id %>">View Details</a>
    </div> <% }) %>
</main>
</body>
</html>
<%- include("partials/footer") %>